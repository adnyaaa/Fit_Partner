<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="50dp"
        tools:context=".DaftarkelasActivity">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/kelas"
                android:background="@drawable/frame3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/kls"
                android:layout_below="@+id/kelas"
                android:text="@string/kls"
                android:fontFamily="@font/montserratsemibold"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="100dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/klsp"
                android:layout_below="@+id/kls"
                android:src="@drawable/kls"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/desc"
                android:layout_below="@+id/klsp"
                android:text="@string/desck"
                android:fontFamily="@font/montserratlight"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="70dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/src"
                android:layout_below="@+id/desc"
                android:hint="@string/srch"
                android:fontFamily="@font/montserratlight"
                android:textColorHint="@color/kelas_src"
                android:textSize="13sp"
                android:background="@drawable/outline_edittext2"
                android:drawableLeft="@drawable/baseline_search_25"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:padding="12dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ftr"
                android:layout_below="@+id/src"
                android:text="@string/ftr"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/kelas"
                android:textSize="16sp"
                android:background="@drawable/btn_outline"
                android:drawableLeft="@drawable/baseline_filter_alt_24"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="50dp"
                android:padding="8dp"
                />
        --!!dari sini--!>
            <RelativeLayout
                android:id="@+id/lst1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ftr">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nkh"
                    android:src="@drawable/nkh"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tle1"
                    android:text="@string/nkh"
                    android:fontFamily="@font/montserratmedium"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="250dp"
                    android:layout_marginEnd="90dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tle2"
                    android:layout_below="@+id/tle1"
                    android:text="@string/nkhdesc"
                    android:fontFamily="@font/montserratlight"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="50dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sj1"
                    android:layout_below="@+id/tle2"
                    android:text="@string/day1"
                    android:fontFamily="@font/montserratlight"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:drawableLeft="@drawable/baseline_date_range_24"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="7dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sj2"
                    android:layout_below="@+id/sj1"
                    android:text="@string/tim1"
                    android:fontFamily="@font/montserratlight"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:drawableLeft="@drawable/baseline_timer_24"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dtr"
                    android:layout_below="@+id/tle2"
                    android:text="@string/daftarbtn"
                    android:fontFamily="@font/montserratmedium"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:backgroundTint="@color/kelas"
                    android:layout_marginLeft="275dp"
                    />
                <TextView
                    android:id="@+id/textViewHari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dtr"
                    android:textSize="30sp"
                    android:text="@string/kelas"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            app:itemIconTint="@color/bottom_navigation_item_color"
            app:itemTextColor="@color/bottom_navigation_item_color"
            app:menu="@menu/bottom_navigation_menu" />

    </RelativeLayout>
</RelativeLayout>