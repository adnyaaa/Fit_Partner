<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regis"
    tools:context=".FormKelasActivity">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/judul"
            android:text="@string/regis"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/judulspeciality_id"
            android:layout_below="@+id/judul"
            android:text="Experience"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="50dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/speciality_id"
            android:layout_below="@+id/judulspeciality_id"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/judulexperience_id"
            android:layout_below="@+id/speciality_id"
            android:text="@string/nama"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/experience_id"
            android:layout_below="@+id/judulexperience_id"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/judulcertification_id"
            android:layout_below="@+id/experience_id"
            android:text="@string/email"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/certification_id"
            android:layout_below="@+id/judulcertification_id"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/judultitle_id"
            android:layout_below="@+id/certification_id"
            android:text="@string/password"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_id"
            android:layout_below="@+id/judultitle_id"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/juduldescription_id"
            android:layout_below="@+id/title_id"
            android:text="@string/password"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description_id"
            android:layout_below="@+id/juduldescription_id"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/judulimage_id"
            android:layout_below="@+id/description_id"
            android:text="@string/password"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_id"
            android:layout_below="@+id/judulimage_id"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/judullevel_id"
            android:layout_below="@+id/image_id"
            android:text="@string/password"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/level_id"
            android:layout_below="@+id/judullevel_id"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/judulstarttime_id"
            android:layout_below="@+id/level_id"
            android:text="@string/password"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/starttime_id"
            android:layout_below="@+id/judulstarttime_id"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/judulendtime_id"
            android:layout_below="@+id/starttime_id"
            android:text="@string/password"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/endtime_id"
            android:layout_below="@+id/judulendtime_id"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/juduljadwal_id"
            android:layout_below="@+id/endtime_id"
            android:text="@string/password"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jadwal_id"
            android:layout_below="@+id/juduljadwal_id"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/judulrekening_id"
            android:layout_below="@+id/jadwal_id"
            android:text="@string/password"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rekening_id"
            android:layout_below="@+id/judulrekening_id"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/judullokasi_id"
            android:layout_below="@+id/rekening_id"
            android:text="@string/password"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lokasi_id"
            android:layout_below="@+id/judullokasi_id"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="10dp"/>




        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_formkelas"
            android:layout_below="@+id/lokasi_id"
            android:text="@string/daftarbtn"
            android:textSize="20sp"
            android:backgroundTint="@color/button"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="10dp"
            android:onClick="btn_formkelas"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/masuk"
            android:layout_below="@+id/btn_formkelas"
            android:text="@string/masuk"
            android:textSize="15sp"
            android:layout_marginStart="50dp"/>
    </ScrollView>
</RelativeLayout>

